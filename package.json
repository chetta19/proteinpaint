{
  "version": "1.8.3",
  "name": "@stjude/proteinpaint-full",
  "description": "a genomics visualization tool for exploring a cohort's genotype and phenotype data",
  "main": "dist/app.js",
  "module": "dist/app.js",
  "bin": "bin.js",
  "private": true,
  "workspaces": [
    "client",
    "server",
    "targets/gdc"
  ],
  "scripts": {
    "reset": "npm run emptyws && npm install && npm run linkws",
    "emptyws": "rm -rf node_modules && rm -rf client/node_modules && rm -rf server/node_modules && rm -f package-lock.json && rm -f yarn.lock && rm -f */package-lock.json",
    "linkws": "mkdir client/node_modules && ln -s ../../node_modules/.bin ./client/node_modules/ && ln -s ../node_modules ./server",
    "dev": "rm -rf public/bin;webpack --config=./webpack.config.js --env.NODE_ENV=development --watch --progress --colors",
    "start": "nodemon server/bin.js --watch ./server/server*.js* --watch server/genome --watch server/dataset",
    "server": "npm start",
    "ppr": "cd targets/sj && ./deploy.sh ppr && cd ../..",
    "testws": "npm test --workspaces",
    "sethooks": "cd .git/hooks && ln -s ../../utils/hooks/pre-commit pre-commit && chmod -R 755 ../../utils/hooks"
  },
  "prettier": {
    "semi": false,
    "useTabs": true,
    "printWidth": 120,
    "singleQuote": true
  },
  "author": "",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/stjude/proteinpaint"
  },
  "bugs": {
    "url": "https://github.com/stjude/proteinpaint"
  }
}
